<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Alba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- 전체적인 색 결정 -->
        <item name="colorPrimary">@color/lite_blue</item>
        <!-- 상단의 배터리 보이는 부분 색 결정 -->
        <item name="colorPrimaryVariant">@color/white_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.Alba.ToolbarStyle</item>
        <item name="buttonStyle">@style/Theme.Alba.ButtonStyle</item>
    </style>
    <style name="Theme.Alba.ToolbarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="titleTextColor">@color/dark_gray</item>
    </style>
    <style name="Theme.Alba.ButtonStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="textFillColor">@color/dark_gray</item>
    </style>
</resources>